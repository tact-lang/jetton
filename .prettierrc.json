{
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "printWidth": 100,
    "semi": false,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": false,
    "overrides": [
        {
            "files": ["*.yaml", "*.yml"],
            "options": {
                "tabWidth": 2
            }
        }
    ],
    "endOfLine": "lf"
}
