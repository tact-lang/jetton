{
    "version": "0.2",
    "language": "en",
    "dictionaries": ["typescript", "node", "npm", "custom-dictionary"],
    "dictionaryDefinitions": [
        {
            "name": "custom-dictionary",
            "path": "./spell/custom-dictionary.txt",
            "addWords": true
        }
    ],
    "ignoreRegExpList": [
        "\\b[xB]\\{[a-fA-F0-9]*_?\\}", // binary literals in Fift-asm
        "\\b0[xX][a-fA-F0-9_]*\\b", // hexadecimal numbers
        "\\b(?:address|crc32|cell|slice|rawSlice)\\(\".+?\"\\)", // some comptime functions
    ],
    "ignorePaths": [
        "node_modules/**",
        "dist/**",
        "build/**",
        ".git/**",
        "package.json",
        "yarn.lock",
        "src/output/**",
        "tsconfig.json",
        "*.boc",
        "*.fif",
        "*.spec.ts.snap"
    ]
}
